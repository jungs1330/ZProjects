<Window x:Class="ZUtility.WorkInProgress"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Work in progress" Height="150" Width="300" ResizeMode="NoResize" ShowInTaskbar="False" WindowStartupLocation="CenterOwner" WindowStyle="None" BorderThickness="3">
    <DockPanel>
        <Button DockPanel.Dock="Bottom" HorizontalAlignment="Center" Margin="10" Click="Cancel_Click">Cancel</Button>
        <Label DockPanel.Dock="Top" HorizontalAlignment="Center" Margin="10">Running....</Label>
        <ProgressBar Name="pgb" Margin="10"/>
    </DockPanel>
</Window>
